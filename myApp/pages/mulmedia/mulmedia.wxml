<view class="page">
  <view class="page__hd">
    <text class="page__title">audio</text>
    <text class="page__desc">音频</text>
  </view>
  <view class="page__bd">
    <audio poster="{{poster}}" author="{{author}}" name="{{name}}" src="{{src}}" id="myAudio" controls loop></audio>
    <view class="body-view">
      <button  bindtap="audioPlay">播放</button>
    </view>
      <button  bindtap="audioPause">暂停</button>
    <view class="body-view">
      <button  bindtap="audio14">跳秒</button>
    </view>
    <view class="body-view">
      <button  bindtap="audioStart">返回 </button>
    </view>
  </view>
</view>
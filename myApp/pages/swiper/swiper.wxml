
<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="true">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="355" height="150"/>
    </swiper-item>
  </block>
</swiper>
<button bindtap="changeIndicatorDots"> indicator-dots </button>
<button bindtap="changeAutoplay"> autoplay </button>

<swiper indicator-dots="true" interval="3000" duration="1000" circular="true" previous-margin="2px" display-multiple-items="1" next-margin='2px' autoplay="true" vertical="true" bindchange="change">
<swiper-item class="item bc_green">1</swiper-item>
<swiper-item class="item bc_red">2</swiper-item>
<swiper-item class="item bc_blue">3</swiper-item>
<swiper-item class="item bc_yellow">4</swiper-item>
</swiper>


page{
  height: 100%;
  width: 100%;
  
}
.container{
  position: relative;
  height: 100%;
  width: 100%;
  background: rgb(16, 17, 17);
  
}
.canvas_area{
  width:100%;
  height: 80%;
  background: white;
}
Canvas{
  width: 100%;
  height: 100%;
}

.canvas_tools{
  position: fixed;
  left: 0;
  bottom: 20rpx;
  height: 100rpx;
  width: 100%;
  display: flex;
  /* flex-direction: row; */
  justify-content: space-around;

}

.box{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgb(248, 245, 250);
}
.box1{
  background-color: #6c07f1;
  background-repeat: no-repeat;
  background-position: center;
}
.box2{
  background-color: #0099cc;

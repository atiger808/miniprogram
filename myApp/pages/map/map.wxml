<view class="page-body">
  <view class="page-section page-section-gap">
    <map 
      id="myMap" 
      longitude="120.1614520" 
      latitude="30.199994" scale="11" 
      controls="{{controls}}" 
      bindcontroltap="controltap" 
      markers="{{markers}}" 
      covers="{{covers}}"
      bindmarkertap="markertap" 
      polyline="{{polyline}}" 
      bindregionchange="regionchange" 
      show-location 
      style="width: 100%; height: 300px;"
    ></map>
  </view>
  <view class="btn-area">
    <button bindtap="getCenterLocation" 
  class="page-body-button" type="primary">获取位置</button>
    <button bindtap="moveToLocation"
  class="page-body-button" type="primary">移动位置</button>
    <button bindtap="translateMarker"
  class="page-body-button" type="primary">移动标注</button>
    <button bindtap="includePoints" class="page-body-button"
  type="primary">缩放视野展示所有经纬度</button>
  </view>
</view>